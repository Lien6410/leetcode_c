/*
Given an integer, convert it to a roman numeral.

Input is guaranteed to be within the range from 1 to 3999.
*/

char* intToRoman(int num) {
    char *roman = malloc(20);
    
    size_t pos = 0;
    while (num >= 1000) {
        roman[pos++] = 'M';
        num -= 1000;    
    }
    if (num >= 900) {
        roman[pos++] = 'C';
        roman[pos++] = 'M';
        num -= 900;
    }
    while (num >= 500) {
        roman[pos++] = 'D';
        num -= 500;    
    }
    if (num >= 400) {
        roman[pos++] = 'C';
        roman[pos++] = 'D';
        num -= 400;
    }
    while (num >= 100) {
        roman[pos++] = 'C';
        num -= 100;    
    }
    if (num >= 90) {
        roman[pos++] = 'X';
        roman[pos++] = 'C';
        num -= 90;
    }
    while (num >= 50) {
        roman[pos++] = 'L';
        num -= 50;    
    }
    if (num >= 40) {
        roman[pos++] = 'X';
        roman[pos++] = 'L';
        num -= 40;
    }
    while (num >= 10) {
        roman[pos++] = 'X';
        num -= 10;    
    }
    if (num >= 9) {
        roman[pos++] = 'I';
        roman[pos++] = 'X';
        num -= 9;
    }
    while (num >= 5) {
        roman[pos++] = 'V';
        num -= 5;    
    }
    if (num >= 4) {
        roman[pos++] = 'I';
        roman[pos++] = 'V';
        num -= 4;
    }
    while (num >= 1) {
        roman[pos++] = 'I';
        num -= 1;    
    }
    
    roman[pos] = '\0';
    return roman;
}
