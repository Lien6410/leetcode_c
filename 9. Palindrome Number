/*

Determine whether an integer is a palindrome. Do this without extra space.

*/

bool isPalindrome(int x) {
    if (x == NULL) return false;
    if ((x < 0) || (x > 2147483647)) return false;
    //if (x < 10) return true;
    
    int div = 1;
    
    while(x / div > 10) div = div * 10;
    
    while (x > 10)
    {
        int head = x / div;
        int tail = x % 10;
        if (head != tail)
        {
            return false;
        }
        else
        {
            x = (x - head * div) / 10;
            if (x < 10) return true;
            div = div / 100;
        }
    }
    
    return true;
    
}
